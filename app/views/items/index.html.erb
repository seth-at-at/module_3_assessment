<%= form_tag search_index_path, method: :get do%>
<p>
  <%= text_field_tag :zip, params[:zip] %>
  <%= submit_tag "search", :name => nil %>
</p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>
